// Zed keymap

// For information on binding keys, see the Zed
// documentation: https://zed.dev/docs/key-bindings
//
// To see the default key bindings run `zed: open default keymap`
// from the command palette.
[
  {
    "bindings": {}
  },
  {
    "context": "GitPanel",
    "bindings": {
      "ctrl-g": "workspace::ToggleLeftDock",
      "d": "git::RestoreFile",
      "c": "git::Commit",
      "a": "git::StageAll"
    }
  },
  {
    "context": "ProjectPanel",
    "bindings": {
      "ctrl-e": "workspace::ToggleLeftDock"
    }
  },
  {
    "context": "VimControl && !menu",
    "bindings": {
      "ctrl-e": "project_panel::ToggleFocus",
      "ctrl-g": "git_panel::ToggleFocus",
      "ctrl-d": "git::Diff",
      "ctrl-p": "file_finder::Toggle",
      "ctrl-a": "editor::ToggleCodeActions",
      "ctrl-n": "editor::GoToDiagnostic",
      "cmd-]": "workspace::ToggleRightDock",
      "cmd-[": "workspace::ToggleLeftDock"
    }
  },
  {
    "context": "Editor",
    "bindings": {
      "\\ space": "editor::Hover",
      "\\ \\": "editor::Hover",
      "\\ f": "pane::RevealInProjectPanel",
      "g r": "editor::FindAllReferences",
      "ctrl-h": "workspace::ActivatePaneLeft",
      "ctrl-l": "workspace::ActivatePaneRight",
      "ctrl-k": "workspace::ActivatePaneUp",
      "ctrl-j": "workspace::ActivatePaneDown",
      "cmd-]": "workspace::ToggleRightDock",
      "cmd-[": "workspace::ToggleLeftDock"
    }
  },
  {
    "context": "Workspace",
    "bindings": {
      "ctrl-c": "command_palette::Toggle",
      "ctrl-h": "workspace::ActivatePaneLeft",
      "ctrl-l": "workspace::ActivatePaneRight",
      "ctrl-k": "workspace::ActivatePaneUp",
      "ctrl-j": "workspace::ActivatePaneDown",
      "ctrl-p": "file_finder::Toggle",
      "ctrl-d": "git::Diff",
      "cmd-]": "workspace::ToggleRightDock",
      "cmd-[": "workspace::ToggleLeftDock"
    }
  },
  {
    "context": "Editor && vim_mode == insert && !menu",
    "bindings": {
      // "j k": "vim::SwitchToNormalMode"
    }
  }
]
