{
  "permissions": {
    "allowAllTools": true,
    "askBeforeFileAccess": false,
    "askBeforeShellCommands": false,
    "askBeforeGitOperations": false,
    "askBeforeWebSearch": false,
    "askBeforeAgentCreation": false,
    "maxConcurrentAgents": 10,
    "allowedCommands": ["*"],
    "blockedCommands": [
      "rm -rf /",
      "rm -rf /*",
      "dd if=/dev/zero of=/dev/*",
      "mkfs.*",
      "format",
      ":(){:|:&};:",
      "shutdown",
      "reboot",
      "init 0",
      "systemctl poweroff"
    ],
    "allowedPaths": ["*"],
    "blockedPaths": [
      "/System",
      "/Library/LaunchDaemons",
      "/Library/LaunchAgents",
      "/etc/passwd",
      "/etc/shadow",
      "/Windows/System32",
      "/boot",
      "/proc",
      "/sys",
      "/dev"
    ]
  },
  "security": {
    "requireConfirmationForDestructiveCommands": true,
    "allowSystemModifications": true,
    "allowNetworkAccess": true,
    "allowProcessExecution": true
  },
  "behavior": {
    "autoApproveFileEdits": true,
    "autoApproveTodoUpdates": true,
    "silentMode": false,
    "verboseToolOutput": false
  },
  "agents": {
    "maxDepth": 3,
    "defaultTimeout": 300000,
    "allowRecursiveAgents": true,
    "shareContextBetweenAgents": true
  },
  "performance": {
    "enableCaching": true,
    "parallelToolExecution": true,
    "maxParallelTools": 10
  }
}