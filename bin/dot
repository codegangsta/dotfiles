#!/usr/bin/env zsh

list_command_paths() {
  find "${DOTFILES}/scripts" -maxdepth 2 -executable -type f
}

beautify_command() {
  awk -F"/" '{print $(NF-1) " " $NF}'
}

if [[ $# -eq 0 ]]; then
  # Show available contexts
  list_command_paths | beautify_command
elif [[ $# -eq 1 ]]; then
  # Show commands for a given context
else
  # Execute a command directly
fi
